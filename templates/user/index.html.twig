{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>UserId</th>
                <th>DomainId</th>
                <th>Username</th>
                <th>Md5Pass</th>
                <th>PasswordHint</th>
                <th>SsoFacebookUid</th>
                <th>SsoGoogleUid</th>
                <th>SsoLiveUid</th>
                <th>SsoYahooUid</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Country</th>
                <th>MasterCode</th>
                <th>ConfirmationCode</th>
                <th>PassResetCode</th>
                <th>Status</th>
                <th>Trials</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Deprecated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.userId }}</td>
                <td>{{ user.domainId }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.md5Pass }}</td>
                <td>{{ user.passwordHint }}</td>
                <td>{{ user.ssoFacebookUid }}</td>
                <td>{{ user.ssoGoogleUid }}</td>
                <td>{{ user.ssoLiveUid }}</td>
                <td>{{ user.ssoYahooUid }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.address1 }}</td>
                <td>{{ user.address2 }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.state }}</td>
                <td>{{ user.zip }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.masterCode }}</td>
                <td>{{ user.confirmationCode }}</td>
                <td>{{ user.passResetCode }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.trials }}</td>
                <td>{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.modified ? user.modified|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.deprecated ? user.deprecated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'userId': user.userId}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'userId': user.userId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="28">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
